<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingLeft="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"

        android:text="General"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/speed_unit_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="speed unit"
            android:textSize="16sp" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Spinner android:id="@+id/speed_unit"
            android:entries="@array/speed_unit_options"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical"
        android:paddingTop="10dp"

        android:text="Speed limit provider"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/open_street_maps_button"
            android:onClick="limitProviderButtonOnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/open_street_maps_limit_provider_button_text" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/here_maps_button"
            android:onClick="limitProviderButtonOnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/here_maps_limit_provider_button_text" />
    </LinearLayout>

    <EditText
        android:id="@+id/here_app_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/here_maps_app_id_field"
        android:inputType="textVisiblePassword" /> <!--Hack to disable autocorrect on Swiftkey-->

    <EditText
        android:id="@+id/here_app_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/here_maps_app_code_field"
        android:inputType="textVisiblePassword" /> <!--Hack to disable autocorrect on Swiftkey-->

    <LinearLayout
        android:id="@+id/open_street_maps_coverage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/check_coverage"
            android:onClick="openStreetMapsCoverageOnClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Check OpenStreetMaps coverage"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visit openstreetmap.org on your computer to add/fix speed limits"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/open_street_maps_donate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?selectableItemBackground"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/donate"
            android:onClick="openStreetMapsDonateOnClick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Donate to OpenStreetMaps"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="click to visit website"
                    android:textColor="?android:textColorSecondary"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
