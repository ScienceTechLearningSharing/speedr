<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:adjustViewBounds="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="@string/stats_this_week"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/stats_week_total_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50:00 - Total drive time"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/stats_week_total_time_no_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1:00:00 - Time if you did not speed"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/stats_week_time_diff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10m 00.0s - Time difference"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/stats_week_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reached destinations 20% sooner"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="@string/stats_this_month"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/stats_month_total_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50:00 - Total drive time"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/stats_month_total_time_no_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1:00:00 - Time if you did not speed"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/stats_month_time_diff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10m 00.0s - Time difference"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/stats_month_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reached destinations 20% sooner"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="@string/stats_this_year"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/stats_year_total_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50:00 - Total drive time"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/stats_year_total_time_no_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1:00:00 - Time if you did not speed"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/stats_year_time_diff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10m 00.0s - Time difference"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/stats_year_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reached destinations 20% sooner"
            android:textSize="14sp"
            />
    </LinearLayout>
</ScrollView>
